<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:src="@drawable/tiledback3"
            android:scaleType="fitXY"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ukuran_huruf_arab_text"
                    android:textSize="25sp"
                    android:textColor="@color/text_color_blue"/>
            <SeekBar
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:min="25"
                    android:max="50"
                    android:thumbTint="@color/text_color_blue"
                    tools:targetApi="lollipop"
                    android:id="@+id/seekbar_arabic_size"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:layout_weight="1"
                        android:textSize="35sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_blue"
                        android:id="@+id/font_size_arabic"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="اَللَّهُ"
                        android:layout_weight="1"
                        android:textColor="@color/text_color_blue"
                        android:id="@+id/sample_text_arabic"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ukuran_huruf_arab_text"
                    android:textSize="25sp"
                    android:textColor="@color/text_color_blue"/>
            <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:min="15"
                    android:max="40"
                    android:thumbTint="@color/text_color_blue"
                    tools:targetApi="lollipop"
                    android:id="@+id/seekbar_translation_size"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:layout_weight="1"
                        android:textSize="35sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color_blue"
                        android:id="@+id/font_size_translation"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Allah"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:textColor="@color/text_color_blue"
                        android:id="@+id/sample_text_translation"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
